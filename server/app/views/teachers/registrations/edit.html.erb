<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-4 col-sm-12">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <%= f.label :email, "Email" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", disabled: true %>
          </div>
          <div class="form-group">
            <%= f.label :name, "Nombre" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, "Apellido" %><br />
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "Contraseña nueva" %> <i>(déjalo en blanco para no cambiarla)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirmacion de contraseña' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="card-footer">
          <div class="form-group">
            <%= f.label :current_password, 'Contraseña actual' %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            <br/>
            <i>(Necesaria para poder confirmar tus cambios.)</i><br />
          </div>
          <%= f.submit "Guardar", :class=>"btn btn-block btn-outline-dark" %>
        </div>
      </div>
    </div>
    <div class="col-md-8 col-sm-12">
      <div class="card">
<div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th></th>
              <th>Curso</th>
              <th>Letra</th>
              <th>Asignatura</th>
              <th># Estudiantes</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <% Classroom.all.each do |classroom| %>
              <tr>
                <td>
                  <div class="form-check">
                    <input 
                      class="form-check-input" 
                      type="checkbox" 
                      name="teacher[classrooms][]"  
                      value="<%= classroom.id %>"
                      <%= "checked" if classroom.teacher == @teacher %>>
                  </div>
                </td>
                <td><%= classroom.level %></td>
                <td><%= classroom.letter %></td>
                <td><%= classroom.subject %></td>
                <td><%= classroom.students.length %></td>
                <td >
                  <div class="float-right">
                    <a href="<%= classroom_path(classroom) %>" class="text-dark"><i class="fas fa-eye"></i></a>
                  </div>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
<% end %>
