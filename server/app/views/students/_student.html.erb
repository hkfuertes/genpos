<div id="<%= dom_id student %>" class="row">
  <div class="col-lg-4 col-sm-12 p-4">
    <p><b>Nombre</b><br/>
      <h4><%= student.name %></h4>
    </p>
    <p><b>Apellido</b> <br/>
      <h4> <%= student.last_name %></h4>
    </p>
    <p><b>Nacimiento</b> <br/>
      <h4> <%= student.birthday %></h4>
    </p>
  </div>
  <div class="col-lg-8 col-sm-12 p-4">
    <h4>Cursos:</h4>
    <ul class="list-group">
      <% student.classrooms.map do |c| %>
        <li class="list-group-item">
        <b><%= c.subject %></b> - <%= c.level %> <%= c.letter %>
        <div class="float-right">
            <a href="#" class="text-dark"><i class="fas fa-eye"></i></a>
        </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
