<div id="<%= dom_id classroom %>" class="row">
  <div class="col-lg-4 col-sm-12 p-4">
    <p><b>Curso</b><br/>
      <h4><%= classroom.level %> <%= classroom.letter %></h4>
    </p>
    <p><b>Asignatura</b> <br/>
      <h4> <%= classroom.subject %></h4>
    </p>
  </div>
  <div class="col-lg-8 col-sm-12 p-4">
  <% if classroom.students.length > 0%>
    <h4>Alumnos:</h4>
    <ul class="list-group">
      <% classroom.students.each do |student| %>
        <li class="list-group-item">
        <%= student.name %> <%= student.last_name %>
        <div class="float-right">
            <a href="<%= student_path(student) %>" class="text-dark"><i class="fas fa-eye"></i></a>
        </div>
        </li>
      <% end %>
      <% else %>
      <h4>Clase sin alumnos.</h4>
      <% end %>
    </ul>
  </div>
</div>
