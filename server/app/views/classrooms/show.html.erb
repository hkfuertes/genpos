<% if !notice.blank? %>
<div class="row">
  <div class="col-12">
    <div class="callout callout-success">
      <p><%= notice %></p>
    </div>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="card-tools float-right">
          <a href="<%= edit_classroom_path(@classroom) %>" class="btn btn-outline-dark">
            <i class="fas fa-edit"></i>&nbsp;
            Editar
          </a>
          <a href="#" class="btn btn-danger confirmation">
            <i class="fas fa-trash"></i>&nbsp;
            Eliminar
          </a>
        </div>
      </div>
      <div class="card-body p-0">
        <%= render @classroom %>
      </div>
    </div>
  </div>
</div>