<% content_for :css do %>
  <style>
    .black {
      background-color: black
    }
    th.rotate {
      /* Something you can count on */
      height: 196px;
    }

    th.rotate > div {
      transform: rotate(270deg);
      width: 0px;
    }

    td.smile-click{
      padding: 0;
      font-size: 32px;
    }
  </style>
<% end %>
<% content_for :custom_scripts do %>
  <script>
    $('td.smile-click').click(function(e){
      e.preventDefault();
      var input = $(this).children("input");
      var id = "#"+input.attr('id');

      if(input.val() == 1){
        //Change to -1
        input.val(-1);
        $(id+'_up').hide();
        $(id+'_down').show();
        $(id+'_zero').hide();
      }else if (input.val() == -1){
        //change to 0
        input.val(0);
        $(id+'_up').hide();
        $(id+'_down').hide();
        $(id+'_zero').show();
      }else{
        input.val(1);
        $(id+'_up').show();
        $(id+'_down').hide();
        $(id+'_zero').hide();
      }

    });
  </script>
<% end %>
